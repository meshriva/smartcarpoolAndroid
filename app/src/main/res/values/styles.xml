<resources>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Style for a single line divider -->
    <style name="SingleLineDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ListHeaderLabel">
        <item name="android:textColor">@color/apptheme_color</item>
        <item name="android:textSize">@dimen/list_header_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ListHeaderDividerLabel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/list_header_divider_margin</item>
        <item name="android:layout_marginTop">@dimen/list_header_divider_margin</item>
        <item name="android:background">@color/apptheme_color</item>
    </style>

    <style name="ListTileLabel">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/list_header_text_size</item>
        <item name="android:textColor">@android:color/background_dark</item>
    </style>


    <style name="ListSubTileLabel">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/list_sub_title</item>
    </style>

    <style name="ListSubTile3Label">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/list_sub_title3</item>
    </style>

    <!-- Suggested community -->

    <style name="carddemo_suggested_header_text"></style>

    <style name="carddemo_suggested_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#D0D0D0</item>
    </style>

    <style name="carddemo_suggested_text_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="carddemo_suggested_text_bold1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Birth.card.content_outer_layout" parent="card.content_outer_layout">
        <!--Style for Content View-->
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/card_content_outer_view_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_content_outer_view_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/card_content_outer_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_content_outer_view_margin_right</item>

    </style>

</resources>
